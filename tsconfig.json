{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "dom"],
    "skipLibCheck": true,
    "baseUrl": ".",
      "paths": {
      "@src/*": ["./src/*"],
    }
  },
}
